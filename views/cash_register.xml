<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="cash_register_form_view" model="ir.ui.view">
        <field name="name">cash.register.form</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='show_cash_register']" position="replace">
                <button name="show_cash_register" type="object" class="oe_stat_button" icon="fa-bars" string="Cash Register"/>
            </xpath>  
        </field>
    </record>
    </data>
</odoo>
